<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.soen.practice4.Main4Activity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/데이터량계산"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fdc7dc"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:background="#ffffff"
                        android:columnCount="1"
                        android:padding="30dp"
                        android:rowCount="8">


                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="데이터 량을 입력해주세요." />

                        <EditText
                            android:id="@+id/editText4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#f4cbec"
                            android:ems="10"
                            android:hint="값을 입력해주세요."
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#f7b2d1"
                            android:padding="10dp"
                            android:text="결과값 : " />

                        <Button
                            android:id="@+id/button8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BYTE -> BIT" />

                        <Button
                            android:id="@+id/button9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="KBYTE -> BIT" />

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MBYTE -> BIT" />

                        <Button
                            android:id="@+id/button11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GBYTE -> KBYTE" />

                    </GridLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/면적계산기"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#caa7f4"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="visible">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:columnCount="1"
                        android:padding="20dp"
                        android:rowCount="6">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="평이나 면적을 입력하세요."
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/editText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#f2cfdb"
                            android:ems="10"
                            android:hint="값을 입력하세요."
                            android:inputType="textPersonName"
                            android:padding="10dp" />


                        <TextView

                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#c7d2e9"
                            android:padding="10dp"
                            android:text="계산 결과가 없습니다." />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="평을 제곱미터로 변환" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="제곱미터를 평으로 변환" />
                    </GridLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bmi계산기"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fdc7dc"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:background="#ffffff"
                        android:columnCount="1"
                        android:padding="20dp"
                        android:rowCount="7">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="키와 몸무게를 입력하세요" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="키(cm)"
                            android:textSize="25dp" />

                        <EditText
                            android:id="@+id/editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#bdfaca"
                            android:ems="10"
                            android:hint="입력해주세요"
                            android:inputType="textPersonName"
                            android:padding="10dp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="체중(kg)"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/editText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#bdfaca"
                            android:ems="10"
                            android:hint="입력해주세요"
                            android:inputType="textPersonName"
                            android:padding="10dp" />

                        <Button
                            android:id="@+id/button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="BIM 계산 결과" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:text="결과가 없습니다. " />
                    </GridLayout>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
